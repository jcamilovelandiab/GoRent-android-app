<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.main.rented_items_history.RentedItemsFragment"
    android:background="#E4E3E3">

    <ListView
        android:id="@+id/rented_items_lv_item_lending_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <ProgressBar
        android:id="@+id/rented_items__pg_loading"
        app:layout_constraintTop_toBottomOf="@id/rented_items_lv_item_lending_list"
        android:layout_width="match_parent"
        android:foregroundGravity="center_horizontal"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity ="center"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar_style"/>

</FrameLayout>